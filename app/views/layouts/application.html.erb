<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | My Favorite Data Structures</title>
    <%= stylesheet_link_tag    'application', media: 'all',
                                              'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <!-- Static navbar -->
      <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
          <div class="navbar-header">

            <%= link_to "Home",home_path(), class:"navbar-brand" %>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li class="<%=is_active('graph')%>"><%= link_to "Graph", graph_path() %></li>
              <li class="<%=is_active('spaghettistack')%>"><%= link_to "Spaghetti Stack", spaghettistack_path() %></li>
              <li class="<%=is_active('binarytree')%>"><%= link_to "Tree", binarytree_path() %></li>
             
            </ul>
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </nav>
    <%= yield %>
    <footer class="footer">
      <div class="container">
        <p class="text-muted">Not really copyright B&R 2014</p>
      </div>
    </footer>
  </body>
</html>